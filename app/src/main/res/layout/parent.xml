    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/dateAdapter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:text="date"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dayAdapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="day"
            android:gravity="center"
            android:layout_marginStart="5dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/month_yearAdapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="month_year"
            android:layout_marginStart="5dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/incomeAdapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="income"
            android:gravity="right"
            android:textColor="#B83562"
            android:layout_gravity="center"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/categoryAdapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="category"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noteAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="note"
                android:textColor="#000000"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/accountAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="account"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:id="@+id/amountAdapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="amount"
            android:layout_marginStart="5dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>